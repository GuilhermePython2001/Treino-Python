nome=str(input('Qual seu nome completo?')).strip()
print('Analisando seu nome...')
print('Seu noome em maiusculo é {}'.format(nome.upper()))
print('Seu nome em miniscula é {}'.format(nome.lower()))
print('Seu nome tem {} letras'.format(len(nome)-nome.count(' ')))
nomes=nome.split()
print(('Seu primeiro nome é {} e ele tem {} letras'.format(nomes[0],len(nomes[0]))))F
